{
    "plugins": [
        "plugins/markdown",
        "plugins/summarize"
    ],
    "source": {
        "include": ["./app", "./server.js"],                   
        "exclude": ["node_modules"]
    },
    "recurseDepth": 10,
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc","closure"]
    },
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true,
        "systemName"            : "BoosterThon App Demo",
        "footer"                : "The Fundraiser that has Everything!",
        "copyright"             :  "Â© BoosterThon",
        "includeDate"           : true,
        "navType"               : "vertical",   
        "theme"                 : "slate",
        "linenums"              : true,         
        "collapseSymbols"       : true,         
        "inverseNav"            : true,         
        "outputSourceFiles"     : true,         
        "outputSourcePath"      : true,         
        "dateFormat"            : "L",   
        "syntaxTheme"           : "default",   
        "sort"					: true,         
        "search"                : true          
    },
    "opts": {
        "destination": "../docs-codebase/",
        "javascript.implicitProjectConfig.checkJs": true,
        "recurse": true,
        "package": "./package.json"
    }
}